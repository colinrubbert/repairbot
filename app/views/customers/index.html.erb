<div class="col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-1">
  <div class="input-group">
    <input type="text" class="form-control" placeholder="Search for... **CURRENTLY NOT FUNCTIONAL**">
    <span class="input-group-btn">
      <button class="btn btn-primary" type="button">Search</button>
    </span>
  </div><!-- /input-group -->
</div><!-- /.col-lg-6 -->
<div class="clear hidden-md hidden-lg"></div>
<br class="hidden-md hidden-lg" />
<div class="col-xs-6 col-xs-offset-1 col-md-4">
  <%= link_to "New Customer", new_customer_path, :class => 'btn btn-primary' %>
</div>
<div class="clear"></div>
<hr />

<div class="col-xs-10 col-xs-offset-1">
  <% @customers.each do |customer| %>
    <div class="col-xs-12 col-md-4">
      <h2>Name: <%= link_to customer.cname, customer_path(customer) %></h2>
      <% if customer.ccompany.present? %>
        <p>Company: <%= customer.ccompany %></p>
      <% end %>
      <p>Primary Phone: <%= customer.cpphone %></p>
      <% if customer.csphone.present? %>
        <p>Secondary Phone: <%= customer.csphone %></p>
      <% end %>
      <p>Address: <%= customer.csaddr %></p>
      <p>City: <%= customer.ccity %></p>
      <p>State: <%= customer.cstate %></p>
      <p>Zipcode: <%= customer.czip %></p>
      <p>Email: <%= customer.cemail %></p>
      <br />
      <% if customer.tech.present? %>
        <small>Checked-In By: <i class="text-danger"><%= customer.tech.fname %> <%= customer.tech.lname %></i></small>
      <% end %>
      <br />
      <br />
    </div>

  <% end %>
</div>
